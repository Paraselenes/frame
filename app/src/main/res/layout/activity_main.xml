<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:background="#fefefe" />


    <FrameLayout
        android:id="@+id/frame_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:clipChildren="false">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:clipChildren="false"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_main_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/tab_main_ny"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/text_tab_selector"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/btn_main_recommend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/tab_service_ny"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/text_tab_selector"
                android:textSize="11sp" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <RadioButton
                android:id="@+id/btn_main_indent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/tab_message_ny"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="订单"
                android:textColor="@color/text_tab_selector"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/btn_main_my"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/tab_me_ny"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/text_tab_selector"
                android:textSize="11sp" />
        </RadioGroup>

    </FrameLayout>

</RelativeLayout>